import harness.x10Test;;

/**
 * Casting nullable T to T when the value is null
 * should cause a class cast exception.
 * (unless T is itself nullable S)
 * This is also true for T == Object
 */
public class NullableObject extends x10Test {
	public def run(): boolean = {
		var gotNull: boolean = false;
		try {
			var x: nullable<x10.lang.Object> = X.mynull();
			var y: x10.lang.Object = (x10.lang.Object) x;
			X.use(y);
		} catch (var e: ClassCastException) {
			gotNull = true;
		}
		return gotNull;
	}

	public static def main(var args: Rail[String]): void = {
		new NullableObject().execute();
	}

	static class X {
		public static def mynull(): nullable<x10.lang.Object> = { return null; }
		public static def use(var y: x10.lang.Object): void = { }
	}
}
