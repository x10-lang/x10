<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            extensions="x10"
            description="X10 Concurrent Programming Language"
            natureID="x10dt.ui.launch.cpp.x10nature"
            icons="icons/compilationUnitNormal.gif"
            language="X10"
            pathFileName=".x10path">
      </language>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="x10dt.ui.parser.ParseController"
            language="X10">
      </parser>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="x10dt.ui.editor.X10TokenColorer"
            language="X10">
      </tokenColorer>
   </extension>
   <!--
   <extension
         point="org.eclipse.imp.runtime.autoEditStrategy">
      <autoEditStrategy
            class="x10dt.ui.editor.formatting.X10AutoIndentStrategy"
            language="X10">
      </autoEditStrategy>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.contexts">
      <context
            name="%context.editingX10Source.name"
            description="%context.editingX10Source.description"
            parentId="org.eclipse.imp.runtime.sourceEditorScope"
            id="x10dt.ui.x10EditorScope">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            name="%context.X10Perspective.name"
            description="%context.X10Perspective.description"
            parentId="org.eclipse.ui.contexts.window"
            id="x10dt.ui.x10PerspectiveScope">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            sequence="M1+M2+T"
            contextId="x10dt.ui.x10PerspectiveScope"
            commandId="x10dt.ui.navigate.OpenType"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            sequence="M1+M2+H"
            contextId="x10dt.ui.x10PerspectiveScope"
            commandId="x10dt.ui.navigate.OpenTypeInHierarchy"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            sequence="M1+T"
            contextId="x10dt.ui.x10EditorScope"
            commandId="x10dt.ui.navigate.OpenHierarchy"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
      <key
            sequence="F4"
            contextId="x10dt.ui.x10PerspectiveScope"
            commandId="x10dt.ui.navigate.OpenTypeHierarchy"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
<!-- navigate -->
      <command
            name="%ActionDefinition.openType.name"
            description="%ActionDefinition.openType.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="x10dt.ui.navigate.OpenType">
      </command>
      <command
            name="%ActionDefinition.openTypeInHierarchy.name"
            description="%ActionDefinition.openTypeInHierarchy.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="x10dt.ui.navigate.OpenTypeInHierarchy">
      </command>
      <command
            name="%ActionDefinition.open.hierarchy.name"
            description="%ActionDefinition.open.hierarchy.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="x10dt.ui.navigate.OpenHierarchy">
      </command>
      
      <command
            name="%ActionDefinition.openTypeWarning.name"
            description="%ActionDefinition.openTypeWarning.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="x10dt.ui.navigate.OpenTypeWarning">
      </command>
      <command
            name="%ActionDefinition.openTypeHierarchy.name"
            description="%ActionDefinition.openTypeHierarchy.description"
            categoryId="org.eclipse.ui.category.navigate"
            id="x10dt.ui.navigate.OpenTypeHierarchy">
      </command>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.outliner">
      <outliner
            class="x10dt.ui.views.Outliner"
            language="X10">
      </outliner>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.foldingUpdater">
      <foldingUpdater
            class="x10dt.ui.editor.X10FoldingUpdater"
            language="X10">
      </foldingUpdater>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contentProposer">
      <proposer
            class="x10dt.ui.contentProposer.X10ContentProposer"
            language="X10">
      </proposer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.modelTreeBuilder">
      <treeBuilder
            class="x10dt.ui.editor.X10TreeModelBuilder"
            language="X10">
      </treeBuilder>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.labelProvider">
      <labelProvider
            class="x10dt.ui.editor.X10LabelProvider"
            language="X10">
      </labelProvider>
   </extension>
   <extension
         id="x10dt.ui.cheatSheets"
         name="X10 Cheat Sheets"
         point="org.eclipse.ui.cheatsheets.cheatSheetContent">
      <category
            name="X10"
            id="x10dt">
      </category>
      <cheatsheet
            name="Using the X10DT"
            category="x10dt"
            contentFile="cheatsheets/UsingX10DT.xml"
            id="x10dt.ui.cheatSheets.using">
         <description>
            A brief introduction to using the X10 Development Toolkit.
         </description>
      </cheatsheet>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.referenceResolvers">
      <referenceResolver
            class="x10dt.ui.editor.X10ReferenceResolver"
            language="X10">
      </referenceResolver>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="X10"
            icon="icons/x10perspective.gif"
            class="x10dt.ui.perspective.X10PerspectiveFactory"
            id="x10dt.ui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <perspectiveShortcut
               id="x10dt.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <perspectiveShortcut
               id="x10dt.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <perspectiveShortcut
               id="x10dt.ui.perspective">
         </perspectiveShortcut>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="x10dt.ui.perspective">
         <showInPart
               id="org.eclipse.imp.runtime.projectExplorerView">
         </showInPart>
         <showInPart
               id="org.eclipse.jdt.ui.PackageExplorer">
         </showInPart>
         <showInPart
               id="org.eclipse.ui.navigator.ProjectExplorer">
         </showInPart>
         <showInPart
               id="org.eclipse.ui.views.ResourceNavigator">
         </showInPart>
         <actionSet
               id="x10dt.ui.X10ElementCreation">
         </actionSet>
         <view
               closeable="true"
               id="x10dt.ui.astValidationView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.views.ProblemView"
               showTitle="true"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.documentationProvider">
      <docProvider
            class="x10dt.ui.editor.X10DocProvider"
            language="X10">
      </docProvider>
   </extension>
