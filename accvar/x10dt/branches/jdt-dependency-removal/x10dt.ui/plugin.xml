   <extension
         point="org.eclipse.imp.runtime.markOccurrences">
      <occurrenceIdentifier
            class="x10dt.ui.editor.X10OccurrenceIdentifier"
            language="X10">
      </occurrenceIdentifier>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="x10dt.ui.X10ElementCreation"
            label="%perspective.actionsets">
         <action
               class="x10dt.ui.perspective.actions.OpenX10InterfaceWizardToolbarAction"
               icon="icons/newint_wiz.gif"
               id="x10dt.ui.NewX10InterfaceToolbarAction"
               label="%new.interface.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.interface.tooltip">
         </action>
         <action
               class="x10dt.ui.perspective.actions.OpenX10ClassWizardToolbarAction"
               icon="icons/newclass_wiz.gif"
               id="x10dt.ui.NewX10ClassToolbarAction"
               label="%new.class.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.class.tooltip">
         </action>
         <action
               class="x10dt.ui.perspective.actions.OpenX10PackageWizardToolbarAction"
               icon="icons/newpack_wiz.gif"
               id="x10dt.ui.NewX10PackageToolbarAction"
               label="%new.package.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.package.tooltip">
         </action>
      </actionSet>
      <!-- =========================================================================== -->
<!-- Java and Coding Action Set (Adding the source, refactor and navigate menu)  -->
<!-- =========================================================================== -->
      <actionSet
            label="%X10ActionSet.label"
            description="%X10ActionSet.description"
            visible="false"
            id="x10dt.ui.typeActionSet">
         <action
               definitionId="x10dt.ui.navigate.OpenTypeInHierarchy"
               label="%OpenTypeInHierarchyAction.label"
               helpContextId="x10dt.ui.open_type_in_hierarchy_action"
               tooltip="%OpenTypeInHierarchyAction.tooltip"
               class="x10dt.search.ui.actions.OpenTypeInHierarchyAction"
               menubarPath="navigate/open.ext2"
               id="openTypeInHierarchy">
         </action>
         <action
               id="openType"
               toolbarPath="org.eclipse.search.searchActionSet/Search"
               class="x10dt.search.ui.actions.OpenTypeAction"
               definitionId="x10dt.ui.navigate.OpenType"
               icon="icons/opentype.gif"
               helpContextId="x10dt.ui.open_type_action"
               label="%OpenTypeAction.label"
               menubarPath="navigate/open.ext2"
               tooltip="%OpenTypeAction.tooltip">
         </action>
         <action
               id="openTypeWarning"
               class="x10dt.search.ui.actions.OpenTypeActionWarning"
               definitionId="x10dt.ui.navigate.OpenTypeWarning"
               label="%OpenTypeAction.label">
         </action>
         <action
               definitionId="x10dt.ui.navigate.OpenTypeHierarchy"
               label="%OpenTypeHierarchyAction.label"
               retarget="true"
               menubarPath="navigate/open.ext"
               id="openTypeHierarchy">
         </action>
      </actionSet>
   </extension>
   
   <extension
         point="org.eclipse.imp.runtime.entityNameLocator">
         <entityNameLocator
             language="x10"
             class="x10dt.ui.editor.X10EntityNameLocator"/>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="x10dt.ui.developerTools"
            class="x10dt.ui.views.ASTValidatorViewPart"
            id="x10dt.ui.astValidationView"
            name="X10 AST Validator"
            restorable="true">
      </view>
      <category
            id="x10dt.ui.developerTools"
            name="X10DT Developer Tools">
      </category>
      <view
            allowMultiple="false"
            category="x10dt.ui.developerTools"
            class="x10dt.ui.views.ASTInfoViewPart"
            id="x10dt.ui.astInfoView"
            name="X10 AST Info"
            restorable="true">
      </view>
      <view
            name="%hierarchyViewName"
            icon="icons/class_hi.gif"
            category="x10dt.ui.developerTools"
            class="x10dt.search.ui.typeHierarchy.TypeHierarchyViewPart"
            id="x10dt.ui.TypeHierarchy">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            name="X10"
            id="x10dt.wizards.category">
      </category>
      <wizard
            category="x10dt.wizards.category"
            class="x10dt.ui.wizards.NewX10ClassWizard"
            finalPerspective="x10dt.ui.perspective"
            hasPages="true"
            icon="icons/newclass_wiz.gif"
            id="x10dt.ui.wizards.NewX10ClassWizard"
            name="X10 Class">
      </wizard>
      <wizard
            category="x10dt.wizards.category"
            class="x10dt.ui.wizards.NewX10InterfaceWizard"
            finalPerspective="x10dt.ui.perspective"
            hasPages="true"
            icon="icons/newint_wiz.gif"
            id="x10dt.ui.wizards.NewX10InterfaceWizard"
            name="X10 Interface">
      </wizard>
      <wizard
            category="x10dt.wizards.category"
            class="org.eclipse.imp.ui.wizards.NewPackageWizard"
            finalPerspective="x10dt.ui.perspective"
            hasPages="true"
            icon="icons/newpack_wiz.gif"
            id="x10dt.ui.wizards.NewX10PackageWizard"
            name="X10 Package">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.quickFixAssistant">
      <quickFixAssistant
            class="x10dt.ui.quickfix.QuickFixAssistant"
            language="X10">
            <supportedMarkerType 
            	markerType="org.eclipse.imp.x10dt.core.problemMarker"
            />
      </quickFixAssistant>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="true"
            id="x10dt.ui.editor"
            name="X10 Editor"
            class="x10dt.ui.editor.X10Editor"
            contributorClass="x10dt.ui.editor.X10EditorActionContributer"
            extensions="x10"
            icon="icons/compilationUnitNormal.gif">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="x10dt.ui.EarlyStartup"></startup>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="x10dt.ui.launching.X10LaunchablePropertyTester"
            id="x10dt.ui.X10LaunchableTester"
            namespace="x10dt.ui"
            properties="hasMain"
            type="org.eclipse.core.runtime.IAdaptable">
      </propertyTester>
      <propertyTester
            class="x10dt.ui.perspective.PerspectiveTester"
            id="x10dt.ui.X10PerspectiveTester"
            namespace="x10dt.ui"
            properties="perspectiveId"
            type="java.lang.Object">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.entityImageDecorator">
      <entityImageDecorator
            class="x10dt.ui.editor.X10EntityImageDecorator"
            language="X10">
      </entityImageDecorator>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.typeHierarchyContentProvider">
      <typeHierarchyContentProvider
            class="x10dt.ui.typeHierarchy.X10TypeHierarchyProvider"
            id="x10dt.ui.typeHierarchyContentProvider"
            language="X10">
      </typeHierarchyContentProvider>
   </extension>
</plugin>
