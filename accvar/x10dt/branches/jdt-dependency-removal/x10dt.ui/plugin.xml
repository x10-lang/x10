   <extension
         point="org.eclipse.ui.commands">
      <command
            name="Format"
            defaultHandler="x10dt.ui.commands.handlers.FormatCmdHandler"
            description="Format X10 source"
            id="x10dt.ui.formatCmd">
      </command>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contextHelper">
      <contextHelper
            class="x10dt.ui.help.X10ContextHelper"
            language="X10">
      </contextHelper>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="x10dt.ui.editor"
            id="imp.rulerActions">
         <action
               label="SelectRulerAction"
               class="org.eclipse.imp.actions.SelectRulerAction"
               actionID="RulerClick"
               id="x10dt.ui.editor.actions.X10SelectRulerAction">
         </action>
         <action
             label="Not Used"
             class="org.eclipse.debug.ui.actions.RulerToggleBreakpointActionDelegate"
             style="push"
             actionID="RulerDoubleClick"
             id="imp.doubleClickBreakpointAction"/>
      </editorContribution>
   </extension>
