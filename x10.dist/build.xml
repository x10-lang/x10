        <echo message="Creating ${bin}/x10cj"/>
        <concat destfile="${bin}/x10cj" append="no">
            <filelist dir="${bin}" files="defs"/>
        </concat>
        <concat destfile="${bin}/x10cj" append="yes">
            <filelist dir="${bin}" files="x10cj.in"/>
