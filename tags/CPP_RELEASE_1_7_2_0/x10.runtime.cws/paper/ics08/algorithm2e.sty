          }% endif
        \algo@captother ##2@%      
        }
      \gdef\algo@label{\algo@captname ##2@}}% the ref is recorded in \algo@label
                                            % macro
    }%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% endif
 \let\old@algolabel=\@label% keep the original value of label macro
