package org.eclipse.imp.x10dt.preferences;
//Here's a fairly complete sample prefspecs file (though be warned: some of it is valid, but nonsense):
details off; // Don't show the "Details..." links

page X10 {
    tabs { // For X10, only show the "instance" (workspace-level) preferences tab
    default out { }
    configuration out { }
    instance in {  }
    project out { }
    }
    
    fields {
    int TabSize {
        tooltip "The number of spaces equivalent to one tab in the source editor";
        range 0 ..20;
        defvalue 4;
        }
    font SourceFont {
        tooltip "The font to use in the source code editor";
        defvalue "courier" 10 normal;
        }
        color CommentColor {
            defvalue 0,128,0;
        }
    int NumPlaces {
        tooltip "The number of logical places upon which the application is executed";
        range 1 .. 50;
        defvalue 4;
        }
        directory DefaultRuntime {
            emptyallowed true "";
            label "Default runtime location";
        }
    }
}

page X10.Compiler {
    fields {
        radio BackEnd {
           values { java "Java", cpp "C++" };
            defvalue cpp;
            tooltip "Select the back-end for code generation and the runtime";
        }
    boolean LoopOptimizations { defvalue true; }
    boolean ArrayOptimizations { defvalue true; }
    boolean PermitAssert { defvalue true; }
    boolean BadPlaceRuntimeCheck {
        tooltip "Enable the generation of code to check for direct accesses to data at another place";
        defvalue true;
        }
        string AdditionalCompilerOptions {
            validator "org.eclipse.imp.x10dt.preferences.CompilerOptionsValidator";
        }
    }
}

page X10.Debugger {
    fields {
        double SillyNum {
            range 2.78 .. 3.14;
            tooltip "";
        }
        combo MoralChoice {
            values { good, evil, gray };
            defvalue gray;
        }
        file SplatFile // for most types, all properties are optional
    }
}