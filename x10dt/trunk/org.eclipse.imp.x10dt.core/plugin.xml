   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="org.eclipse.imp.x10dt.core.projectContextMenu"
            nameFilter="*"
            objectClass="org.eclipse.jdt.core.IJavaProject">
         <menu
               id="org.eclipse.imp.x10dt.core.menu1"
               label="X10"
               path="additions">
            <separator name="group1"/>
         </menu>
         <action
               class="org.eclipse.imp.x10dt.core.actions.ProjectBuilderEnable"
               enablesFor="1"
               icon="icons/builderEnable.gif"
               id="org.eclipse.imp.x10dt.core.newAction"
               label="Enable Builder"
               menubarPath="org.eclipse.imp.x10dt.core.menu1/group1"
               tooltip="Enable the X10 Compiler for this project"/>
      </objectContribution>
   </extension>
