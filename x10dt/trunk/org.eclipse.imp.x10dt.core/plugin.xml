<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="X10Builder"
         name="X10 Compiler"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run class="org.eclipse.imp.x10dt.core.builder.X10Builder"/>
      </builder>
   </extension>
   <extension
         id="x10nature"
         name="X10 Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run class="org.eclipse.imp.x10dt.core.builder.X10ProjectNature"/>
      </runtime>
      <builder id="org.eclipse.imp.x10dt.core.builder.X10Builder"/>
      <requires-nature id="org.eclipse.jdt.core.javanature"/>
   </extension>
   <extension
         id="problemMarker"
         name="X10 Problem Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <super type="org.eclipse.core.resources.textmarker"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.imp.x10dt.core"
            name="X10"/>
      <wizard
            category="org.eclipse.imp.x10dt.core"
            class="org.eclipse.imp.x10dt.core.wizards.NewX10ClassWizard"
            hasPages="true"
            icon="icons/newclass.gif"
            id="org.eclipse.imp.x10dt.core.wizards.NewX10ClassWizard"
            name="X10 Class"/>
      <wizard
            canFinishEarly="false"
            category="org.eclipse.imp.x10dt.core"
            class="org.eclipse.imp.x10dt.core.wizards.X10ProjectWizard"
            hasPages="true"
            icon="icons/newproject.gif"
            id="org.eclipse.imp.x10dt.core.newProject"
            name="X10 Project"
            project="true"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.imp.x10dt.core.preferences.X10PreferencePage"
            id="org.eclipse.imp.x10dt.core.preferences.X10PreferencePage"
            name="X10"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.imp.x10dt.core.preferences.PreferenceInitializerOriginal"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.imp.x10dt.core.preferences.X10TabbedPreferencesPage"
            id="org.eclipse.imp.x10dt.core.preferences.X10TabbedPreferencesPage"
            name="X10 Page in Revision"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.imp.x10dt.core.preferences.PreferenceInitializer"/>
   </extension>
   
