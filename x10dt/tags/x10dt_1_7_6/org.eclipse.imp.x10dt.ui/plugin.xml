   <extension
         point="org.eclipse.imp.runtime.markOccurrences">
      <occurrenceIdentifier
            class="org.eclipse.imp.x10dt.ui.editor.X10OccurrenceIdentifier"
            language="X10">
      </occurrenceIdentifier>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.eclipse.imp.x10dt.ui.X10ElementCreation"
            label="%perspective.actionsets">
         <action
               class="org.eclipse.imp.x10dt.ui.perspective.actions.OpenX10InterfaceWizardToolbarAction"
               icon="icons/newint_wiz.gif"
               id="org.eclipse.imp.x10dt.ui.NewX10InterfaceToolbarAction"
               label="%new.interface.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.interface.tooltip">
         </action>
         <action
               class="org.eclipse.imp.x10dt.ui.perspective.actions.OpenX10ClassWizardToolbarAction"
               icon="icons/newclass_wiz.gif"
               id="org.eclipse.imp.x10dt.ui.NewX10ClassToolbarAction"
               label="%new.class.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.class.tooltip">
         </action>
         <action
               class="org.eclipse.imp.x10dt.ui.perspective.actions.OpenX10PackageWizardToolbarAction"
               icon="icons/newpack_wiz.gif"
               id="org.eclipse.imp.x10dt.ui.NewX10PackageToolbarAction"
               label="%new.package.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.package.tooltip">
         </action>
         <action
               class="org.eclipse.imp.x10dt.ui.perspective.actions.OpenX10ProjectJavaBCWizardToolbarAction"
               icon="icons/newx10prj_java.gif"
               id="org.eclipse.imp.x10dt.ui.NewX10ProjectJavaToolbarAction"
               label="%new.project.java.label"
               style="push"
               toolbarPath="Normal/X10Wizards"
               tooltip="%new.project.java.tooltip">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.toggleBreakpointHandler">
         <toggleBreakpointHandler
             language="x10"
             class="org.eclipse.imp.x10dt.ui.debug.X10ToggleBreakpointHandler"/>
            </extension>

</plugin>
